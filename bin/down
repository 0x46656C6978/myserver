#!/usr/bin/env bash
RED='\033[0;31m'
NC='\033[0m'

echo -ne "${RED}All services will be stoped and removed, are you sure do you want to continue (y/n)?:${NC} "
read answer
case ${answer} in
        y|Y )
                docker-compose down
        ;;
        * )
                echo ""
        ;;
esac
